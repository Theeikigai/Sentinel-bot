const { SlashCommandBuilder, EmbedBuilder } = require('discord.js');

module.exports = {
  data: new SlashCommandBuilder()
    .setName('roster')
    .setDescription('Manage team rosters')
    .addSubcommand(subcommand =>
      subcommand
        .setName('add')
        .setDescription('Add a member to the roster')
        .addUserOption(option =>
          option.setName('user')
            .setDescription('User to add to the roster')
            .setRequired(true)))
    .addSubcommand(subcommand =>
      subcommand
        .setName('remove')
        .setDescription('Remove a member from the roster')
        .addUserOption(option =>
          option.setName('user')
            .setDescription('User to remove from the roster')
            .setRequired(true)))
    .addSubcommand(subcommand =>
      subcommand
        .setName('list')
        .setDescription('List all members in the roster')),

  async execute(interaction) {
    const subCommand = interaction.options.getSubcommand();

    if (subCommand === 'add') {
      const user = interaction.options.getUser('user');

      // Add user to the roster (e.g., save to a database or list)
      await addUserToRoster(interaction.guild.id, user.id); // Implement this function

      const embed = new EmbedBuilder()
        .setTitle('Member Added to Roster')
        .setDescription(`${user.username} has been added to the roster!`)
        .setColor(0x00AE86)
        .setTimestamp();

      await interaction.reply({ embeds: [embed], ephemeral: true });
    }

    if (subCommand === 'remove') {
      const user = interaction.options.getUser('user');

      // Remove user from the roster
      await removeUserFromRoster(interaction.guild.id, user.id); // Implement this function

      const embed = new EmbedBuilder()
        .setTitle('Member Removed from Roster')
        .setDescription(`${user.username} has been removed from the roster.`)
        .setColor(0x00AE86)
        .setTimestamp();

      await interaction.reply({ embeds: [embed], ephemeral: true });
    }

    if (subCommand === 'list') {
      const roster = await getRoster(interaction.guild.id); // Implement this function

      if (roster.length === 0) {
        const embed = new EmbedBuilder()
          .setTitle('No Members in Roster')
         